{% extends 'base.html.twig' %}

{% block title %}Like{% endblock %}

{% block body %}
    <h1>Like</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ like.id }}</td>
            </tr>
            <tr>
                <th>Liked</th>
                <td>{{ like.liked ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ like.createdAt ? like.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ like.updatedAt ? like.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('like_index') }}">back to list</a>

    <a href="{{ path('like_edit', {'id': like.id}) }}">edit</a>

    {{ include('like/_delete_form.html.twig') }}
{% endblock %}
