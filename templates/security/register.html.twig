{% extends 'layout_front.html.twig' %}

{% block title %}G Blog | Registro{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row vh-100 d-flex align-items-center">
            <div class="col-md-6 col-10 offset-md-3 offset-1 align-self-center">
                {{ form_start(form) }}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <a href="{{ path('blog') }}"><h1 class="mb-4 text-center text-white">G Blog</h1></a>

                    {{ form_row(form, {'label': ' '}) }}

                    <div class="panel panel-default mb-3">
                        <div class="panel-body text-center text-info">
                            ¿Éstas registrado? |
                            <a class="pull-right text-muted" href="{{ path('app_login') }}">Ingresar</a>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary btn-lg btn-block">Registrar</button>
                    </div>

                    <div id="form-error"></div>
                    <div id="form-response"></div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('register') }}
{% endblock %}